{
  "name": "umuc-food-finder",
  "description": "CMSC 495 Capstone",
  "license": "UNLICENSED",
  "scripts": {
    "build": "babel ./server --out-dir dist && yarn client:build",
    "clean": "rimraf dist",
    "db:drop": "sequelize db:migrate:undo:all",
    "db:migrate": "sequelize db:migrate",
    "db:rollback": "sequelize db:migrate:undo",
    "db:startNewMigration": "sequelize migration:create --name",
    "eslint:check": "eslint ./server --ext .ts --ext .js",
    "eslint:fix": "eslint --fix ./server --ext .ts --ext .js",
    "lint": "yarn eslint:check && yarn prettier:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:fix",
    "prebuild": "yarn run clean",
    "prettier:check": "prettier --check server/**/*.{js,ts}",
    "prettier:fix": "prettier --write server/**/*.{js,ts}",
    "start": "./scripts/rest.sh",
    "test": "echo \"Error: no test specified\" && exit 1",
    "client:start": "PORT=3001 react-scripts start",
    "client:build": "react-scripts build",
    "client:test": "react-scripts test",
    "client:eject": "react-scripts eject",
    "docker:bash": "docker-compose exec app bash",
    "docker:rebuild": "docker-compose stop && docker-compose up -d --build --force-recreate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerodonnell/umuc-food-finder.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "@articulate/funky": "^1.7.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "bcrypt": "^5.0.0",
    "bcrypt-promise": "^2.0.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "decoders": "^1.14.0",
    "express": "^4.16.4",
    "express-joi-validation": "^1.0.0",
    "express-winston": "^3.1.0",
    "font-awesome": "^4.7.0",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^2.4.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.12.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.8.2",
    "pm2": "^3.4.0",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropdown": "^1.6.4",
    "react-fontawesome": "^1.6.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "rimraf": "^2.6.3",
    "sequelize": "^4.43.0",
    "sequelize-cli": "^5.4.0",
    "shards-react": "^1.0.3",
    "winston": "^3.2.1",
    "yarn": "^1.16.0",
    "yelp-fusion": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "bluebird": "^3.5.3",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "react-app-rewired": "^2.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
